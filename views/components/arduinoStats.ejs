<div class="card">
  <div class="card-header">
    <h1>Arduino <%= id %></h1>
  </div>

  <div class="card-body">
    <div class="mt-3 d-flex justify-content-center">
      <canvas id="myChart" style="max-width: 800px; max-height: 500px;"></canvas>

      <script>
        const ctx = document.getElementById('myChart');

        const labels = [
          <% readings.forEach(element => { %> '<%= element.date.toISOString().split('T')[0] + ' ' + element.date.toISOString().split('T')[1].split('.')[0] %>',
          <% }); %>
        ];

        const dim1Data = [
          <% readings.forEach(reading => { %>
          <%= reading.dims[0] %>,
          <% }); %>
        ];

        const dim2Data = [
          <% readings.forEach(reading => { %>
          <%= reading.dims[1] %>,
          <% }); %>
        ];

        const dim3Data = [
          <% readings.forEach(reading => { %>
          <%= reading.dims[2] %>,
          <% }); %>
        ];

        const lightData = [
          <% readings.forEach(element => { %>
          <%= element.light %>,
          <% }); %>
        ];

        const motionData = [
          <% readings.forEach(element => { %>
          <%= element.motion %>,
          <% }); %>
        ];

        const buttonData = [
          <% readings.forEach(element => { %>
          <%= element.button %>,
          <% }); %>
        ];

        const data = {
          labels,
          datasets: [{
              label: 'Brilho (1)',
              data: dim1Data,
              fill: false,
              borderColor: 'rgb(75, 192, 192)',
              tension: 0.1
            },
            {
              label: 'Brilho (2)',
              data: dim2Data,
              fill: false,
              borderColor: 'rgb(153, 102, 255)',
              tension: 0.1
            },
            {
              label: 'Brilho (3)',
              data: dim3Data,
              fill: false,
              borderColor: 'rgb(255, 159, 64)',
              tension: 0.1
            },
            {
              label: 'Sensor de luz',
              data: lightData,
              fill: false,
              borderColor: 'rgb(255, 99, 132)',
              tension: 0.1
            },
            {
              label: 'Sensor de movimento',
              data: motionData,
              fill: false,
              borderColor: 'rgb(54, 162, 235)',
              tension: 0.1
            },
            {
              label: 'Bot√£o',
              data: buttonData,
              fill: false,
              borderColor: 'rgb(255, 205, 86)',
              tension: 0.1
            }
          ]
        };

        new Chart(ctx, {
          type: 'line',
          data,
          options: {
            scales: {
              y: {
                max: 255,
                min: 0
              }
            },
            interaction: {
              intersect: false,
              axis: 'xy',
              mode: 'nearest'
            }
          }
        });
      </script>
    </div>
  </div>
</div>